<h2><%= author.name %></h2>
<p>Mustache Size: <%= author.mustacheSize %></p>

<hr>

<h2>Posts by this author:</h2>
<% posts.forEach(function(post) { %>
    <p><a href="/posts/<%= post.id %>"><%= post.title %></a></p>
<% }) %>


<hr>

<h2>Add a new post:</h2>

<form action="/authors/<%= author.id %>" method="post">
    <input type="text" name="title" id="" placeholder="Post title..."><br />
    <input type="text" name="content" id="" placeholder="Type something..">
    <button type="submit">Add Post</button>
</form>